{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Web Plan",
  "type": "object",
  "additionalProperties": false,
  "required": ["project_type", "name", "app_title", "pages"],
  "properties": {
    "project_type": { "type": "string", "const": "nextjs_site" },
    "name": { "type": "string", "minLength": 2, "maxLength": 40 },
    "app_title": { "type": "string", "minLength": 2, "maxLength": 80 },
    "tagline": { "type": "string", "maxLength": 140 },
    "theme": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "accent": { "type": "string", "default": "neutral" },
        "radius": { "type": "string", "default": "xl" }
      }
    },
    "pages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["route", "title", "sections"],
        "properties": {
          "route": { "type": "string", "pattern": "^/([a-z0-9-]+(/)?)*$" },
          "title": { "type": "string", "minLength": 1, "maxLength": 60 },
          "sections": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1, "maxLength": 40 }
          }
        }
      }
    },
    "nav": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["label", "route"],
        "properties": {
          "label": { "type": "string", "minLength": 1, "maxLength": 30 },
          "route": { "type": "string", "pattern": "^/([a-z0-9-]+(/)?)*$" }
        }
      }
    }
  }
}
